{
  "compilerOptions": {
    "typeRoots": ["./types"],
    "target": "es5",
    "lib": [
      "dom",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "src/*": ["./src/*"],
      "e2e/*": ["./e2e/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src",
    "e2e",
    "types"
  ],
  "exclude": [
    "./node_modules",
    "./*.js",
    "./**/*.js"
  ]
}
